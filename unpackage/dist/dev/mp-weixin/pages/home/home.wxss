.home-wrap {
  background-color: #f2f6f9;
}
.home-bacn-top {
  width: 36px;
  height: 36px;
  background-color: #007aff;
  color: #fff;
  text-align: center;
  line-height: 36px;
  position: fixed;
  right: 5px;
  bottom: 10%;
  z-index: 9;
  border-radius: 100%;
}
.home-search {
  padding: 10px;
  height: 34px;
}
.home-search .search-input {
  width: calc(100% - 58px);
  height: 34px;
  position: absolute;
  background-color: #fff;
  font-size: 14px;
  border-radius: 5px 0 0 5px;
  padding: 0 10px;
  line-height: 34px;
}
.home-search .search-btn {
  width: 58px;
  background: #007aff;
  color: #fff;
  position: absolute;
  right: 10px;
  top: 10px;
  text-align: center;
  line-height: 34px;
  border-radius: 0 5px 5px 0;
  font-size: 14px;
}
.copy-mene-fixed {
  width: 100%;
  height: 44px;
  position: fixed;
  left: 0;
  top: 0;
  background-color: #007aff;
  z-index: 9;
}
.home-top-menu {
  padding: 10px 10px 0px 10px;
  position: relative;
  box-sizing: border-box;
}
.home-top-menu.menu-fixed {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 9;
}
.home-top-menu.menu-fixed .type-bar .type-item {
  color: #fff;
}
.home-top-menu.menu-fixed .type-bar .type-item.active {
  color: #fff;
}
.home-top-menu.menu-fixed .type-bar .type-item.active:before {
  background-color: #fff;
}
.home-top-menu.menu-fixed .fenlei {
  color: #fff;
}
.home-top-menu .type-bar {
  display: flex;
  flex-direction: row;
  margin: 0;
  overflow-x: auto;
  white-space: nowrap;
  width: calc(100% - 36px);
  height: 34px;
}
.home-top-menu .type-bar .type-item {
  margin: 0 10px;
  height: 24px;
  text-align: center;
  display: inline-block;
  flex-direction: column;
  align-items: center;
  color: #999;
}
.home-top-menu .type-bar .type-item.active {
  position: relative;
  color: #007aff;
}
.home-top-menu .type-bar .type-item.active:before {
  content: "";
  width: 100%;
  height: 2px;
  background-color: #007aff;
  position: absolute;
  left: 0;
  bottom: 0;
}
.home-top-menu .type-bar .type-item .type-text {
  font-size: 14px;
}
.home-top-menu .fenlei {
  width: 34px;
  height: 24px;
  text-align: center;
  color: #999;
  border-left: solid 1px #ebebeb;
  position: absolute;
  top: 10px;
  right: 0;
}
.home-top-menu .fenlei-cont {
  width: 24%;
  background-color: #fff;
  position: absolute;
  right: 10px;
  top: 40px;
  z-index: 10;
  padding: 10px;
  border-radius: 5px;
}
.home-top-menu .fenlei-cont .fenlei-cont-item {
  width: 100%;
  line-height: 40px;
  font-size: 14px;
  text-align: center;
}
.fenlei-mask {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9;
  left: 0;
}
.home-swiper {
  width: calc(100% - 20px);
  margin: 0 10px 10px 10px;
  border-radius: 8px;
  overflow: hidden;
}
.home-swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.home-swiper .swiper-item image {
  width: 100%;
}
.home-list {
  padding: 0 5px;
}
.home-list .home-list-item {
  width: 50%;
  display: inline-block;
  padding: 0 5px;
  box-sizing: border-box;
  margin-bottom: 12px;
  position: relative;
}
.home-list .home-list-item .item-img {
  width: 100%;
  height: 100px;
  border-radius: 5px;
  overflow: hidden;
  margin-bottom: 5px;
}
.home-list .home-list-item .item-img image {
  width: 100%;
  height: 100px;
}
.home-list .home-list-item .item-title {
  font-size: 14px;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.home-list .home-list-item .item-cont {
  font-size: 12px;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.home-list .home-list-item .item-pros {
  width: calc(100% - 10px);
  height: 24px;
  position: absolute;
  font-size: 12px;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  z-index: 1;
  top: 76px;
  left: 5px;
  padding: 0 10px;
  box-sizing: border-box;
}
.home-list .home-list-item .item-pros .pros-img {
  width: 50%;
  display: inline-block;
  position: relative;
}
.home-list .home-list-item .item-pros .pros-img .pros-di {
  width: 100%;
  height: 5px;
  border-radius: 5px;
  background-color: #999;
  position: absolute;
  left: 0;
  top: -6px;
  z-index: 1;
}
.home-list .home-list-item .item-pros .pros-img .pros-jd {
  width: 100%;
  height: 5px;
  border-radius: 5px;
  background-color: #007aff;
  position: absolute;
  left: 0;
  top: -6px;
  z-index: 2;
}
.home-list .home-list-item .item-pros .pros-txt {
  width: 50%;
  display: inline-block;
  line-height: 24px;
  text-align: right;
  font-size: 12px;
}
.home-list .home-list-item .item-tag-red {
  position: absolute;
  font-size: 10px;
  color: #fff;
  background-color: #dd524d;
  border-radius: 0 5px 0 5px;
  z-index: 1;
  top: 0;
  right: 5px;
  padding: 2px 5px;
  letter-spacing: 1px;
}