.mine-wrap {
  background-color: #f2f6f9;
  padding: 10px;
}
.mine-info {
  display: flex;
  margin-bottom: 12px;
}
.mine-info .info-avatar {
  width: 80px;
  height: 80px;
  border-radius: 100%;
  border: solid 2px #fff;
  margin-right: 14px;
}
.mine-info .info-cont {
  color: #666;
  display: inline-block;
  padding-top: 5px;
  margin-bottom: 6px;
  letter-spacing: 1px;
  line-height: 24px;
}
.mine-info .info-cont .info-name {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 5px;
}
.mine-info .info-cont .iconfont {
  margin-right: 5px;
}
.mine-info .info-cont .info-txt {
  font-size: 12px;
}
.mine-menu {
  overflow: hidden;
  background-color: #fff;
  border-radius: 8px;
  padding: 10px 0;
  margin-bottom: 12px;
}
.mine-menu .mine-menu-item {
  width: 25%;
  display: inline-block;
  text-align: center;
}
.mine-menu .mine-menu-item .iconfont {
  font-size: 28px;
  margin-bottom: 5px;
  color: #999;
}
.mine-menu .mine-menu-item .item-txt {
  font-size: 12px;
  color: #666;
}
.mine-study {
  overflow: hidden;
  background-color: #fff;
  border-radius: 8px;
  padding: 14px 10px;
  margin-bottom: 12px;
}
.mine-study .study-title {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 10px;
}
.mine-study .study-block {
  display: flex;
}
.mine-study .study-block .study-block-item {
  width: calc(50% - 5px);
  height: 48px;
  text-align: center;
  padding: 14px 0;
  color: #fff;
  border-radius: 5px;
}
.mine-study .study-block .study-block-item:first-child {
  margin-right: 5px;
  background-color: #1677ff;
}
.mine-study .study-block .study-block-item:last-child {
  margin-left: 5px;
  background-color: #ff4d4f;
}
.mine-study .study-block .study-block-item .item-txt1 {
  font-size: 12px;
  margin-bottom: 6px;
  opacity: 0.8;
}
.mine-study .study-block .study-block-item .item-txt2 {
  font-size: 16px;
  font-weight: bold;
}
.mine-echarts {
  width: 100%;
  height: 200px;
  background-color: #fff;
  border-radius: 5px;
}
