.detail-wrap {
  background-color: #fff;
}
.detail-video {
  width: 100%;
  position: relative;
}
.detail-video .video-status {
  position: absolute;
  font-size: 10px;
  color: #fff;
  background-color: #dd524d;
  border-radius: 0 0 0 5px;
  z-index: 1;
  top: 0;
  right: 0;
  padding: 2px 5px;
  letter-spacing: 1px;
}
.detail-video .video-cont {
  height: 300px;
  background-color: #f2f6f9;
}
.detail-video .video-cont video {
  width: 100%;
  height: 100%;
}
.detail-cont {
  padding: 16px 10px;
}
.cont-title {
  display: flex;
  margin-bottom: 12px;
}
.cont-title .title-txt {
  width: 60%;
  font-size: 16px;
  font-weight: bold;
  display: inline-block;
}
.cont-title .ttitle-status {
  width: 40%;
  font-size: 12px;
  color: #dd524d;
  display: inline-block;
  text-align: right;
}
.class-block {
  letter-spacing: 1px;
  background-color: #f2f6f9;
  padding: 10px;
  border-radius: 5px;
  margin-bottom: 18px;
}
.class-block .class-title-wrap .class-title {
  font-size: 14px;
  color: #333;
  margin-left: 5px;
}
.class-block .class-desc {
  font-size: 12px;
  color: #999;
  line-height: 20px;
  padding: 5px 0 5px 24px;
}
.class-title-mulu-list {
  padding: 10px 0 5px 24px;
}
.class-title-mulu-list .mulu-item {
  display: flex;
  position: relative;
  margin-bottom: 10px;
}
.class-title-mulu-list .mulu-item .iconfont {
  width: 6%;
  display: inline-block;
  color: #999;
}
.class-title-mulu-list .mulu-item .mulu-item-txt {
  width: 74%;
  font-size: 12px;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 10px;
}
.class-title-mulu-list .mulu-item .mulu-item-status {
  width: 20%;
  display: inline-block;
  font-size: 12px;
  text-align: right;
}
.tuijian .tuijian-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}
.tuijian .tuijian-list {
  display: flex;
  flex-direction: row;
  margin: 0 0 12px 0;
  overflow-x: auto;
  white-space: nowrap;
  width: 100%;
  height: 80px;
}
.tuijian .tuijian-list .tuijian-list-item {
  margin: 0 2px;
  width: 30%;
  height: 80px;
  text-align: center;
  display: inline-block;
  flex-direction: column;
  align-items: center;
  color: #999;
}
.tuijian .tuijian-list .tuijian-list-item .item-img {
  width: 100%;
  height: 60px;
  border-radius: 5px;
  overflow: hidden;
  margin-bottom: 5px;
}
.tuijian .tuijian-list .tuijian-list-item .item-img image {
  width: 100%;
  height: 100px;
}
.tuijian .tuijian-list .tuijian-list-item .item-title {
  font-size: 12px;
  color: #333;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  padding-right: 10px;
}
.tuijian .tuijian-list .tuijian-list-item .item-tag-red {
  position: absolute;
  font-size: 10px;
  color: #fff;
  background-color: #dd524d;
  border-radius: 0 5px 0 5px;
  z-index: 1;
  top: 0;
  right: 5px;
  padding: 2px 5px;
  letter-spacing: 1px;
}
.text-primary {
  color: #007aff;
}
.text-success {
  color: #4cd964;
}
.text-grey {
  color: #999;
}